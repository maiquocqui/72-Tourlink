	.container
		.login-panel.clearfix
			nav.login-nav.clearfix
				ul
					li.active
						a(href="dangnhap.html") Đăng nhập
					li
						a(href="dangky.html") Đăng ký
			.loginfrm-wrap
				.form-group
					label <i class="material-icons">email</i>
					input(type="text" placeholder="Địa chỉ email")
				.form-group
					label <i class="material-icons">lock</i>
					input(type="text" placeholder="Mật khẩu")
				.checkbox.remember-pw
					input#rememberpw(type="checkbox", name="rmbpw")
					label(for="rememberpw") Lưu mật khẩu
				.frm-btn
					input(type="submit", value="Đăng nhập")
				.forget-pw
					a(href="#") Quên mật khẩu?
				.social-login
					.module-title Đăng nhập bằng
					.social-list
						a.facebook(href="#") <i class="fa fa-facebook" aria-hidden="true"></i>facebook
						a.google(href="#") <i class="fa fa-google-plus" aria-hidden="true"></i>Google